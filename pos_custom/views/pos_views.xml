<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_pos_order_filter_inherit" model="ir.ui.view">
    <field name="name">pos.order.list.select.inherit</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_filter" />
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='order_month']" position="after">
          <filter name="today" string="Today" domain="[('date_order', '>=', (context_today().strftime('%Y-%m-%d 00:00:00'))), ('date_order', '&lt;=', (context_today().strftime('%Y-%m-%d 23:59:59')))]"/>
          <filter name="yesterday" string="Yesterday" domain="[('date_order', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')), ('date_order', '&lt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d 23:59:59'))]"/>
          <filter name="last_week" string="Last Week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(weeks=1)).strftime('%Y-%m-%d')), ('create_date', '&lt;=', context_today())]"/>
      </xpath>

    </field>
  </record>
  <record id="view_pos_pos_form_inherit_config" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <field name="session_id" position="after">
                <field name="config_id" />
           </field>
        </field>
    </record>


  <record id="view_pos_order_filter_inherit" model="ir.ui.view">
    <field name="name">Order</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_filter" />
    <field name="arch" type="xml">
    <xpath expr="//filter[@name='session']" position="after">
          <filter string="Point of Sale" name="pos" domain="[]" context="{'group_by': 'config_id'}"/>

      </xpath>
    </field>
  </record>

</odoo>
